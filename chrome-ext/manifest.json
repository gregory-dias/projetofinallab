{
  "manifest_version": 3,
  "name": "TCC Tradutor",
  "version": "1.0",
  "description": "Extensão para tradução de palavras",
  "permissions": [
    "activeTab",
    "storage",
    "commands",
    "contextMenus",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "http://localhost:8000/*",
    "http://127.0.0.1:8000/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["style.css"],
      "js": [
        "src/api.js",
        "src/cache.js",
        "src/highlighter.js",
        "src/content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "commands": {
    "ativar_caixa_traducao": {
      "suggested_key": {
        "default": "Alt+Shift+Y",
        "mac": "Alt+Shift+Y"
      },
      "description": "Ativar caixa de tradução"
    }
  }
}